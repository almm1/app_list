<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AppList" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/light_start_default_grad</item>
        <item name="colorPrimaryVariant">@color/light_start_border_grad</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/dark_start_default_grad</item>
        <item name="colorSecondaryVariant">@color/dark_start_grad_bg</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

        <item name="bg">@drawable/bg_light</item>
        <item name="details_bg">@drawable/details_bg_light</item>
        <item name="item_bg" >@drawable/item_bg_light</item>
        <item name="logo_theme" >@drawable/logo_theme_light</item>
        <item name="more_button_bg">@drawable/more_button_bg_light</item>
        <item name="more_icon" >@drawable/more_icon_light</item>
        <item name="ray" >@drawable/ray_light</item>
        <item name="theme_button_bg">@drawable/theme_button_bg_light</item>
        <item name="text_color">@color/light_main_text_color</item>
        <item name="secondary_text_color">@color/light_secondary_text_color</item>
    </style>
</resources>