<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="daymode">
        <item name="android:textSize">@dimen/title_theme_text_size</item>
        <item name="android:letterSpacing">-0.02</item>
        <item name="android:textColor">@color/light_main_text_color</item>
        <item name="fontFamily">@font/manrope_bold</item>
        <item name="lineHeight">22sp</item>
    </style>

    <style name="nightmode">
        <item name="android:textSize">@dimen/title_theme_text_size</item>
        <item name="android:letterSpacing">-0.02</item>
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/manrope_bold</item>
        <item name="lineHeight">22sp</item>
    </style>

    <style name="find_all_ap">
        <item name="android:textSize">@dimen/title_text_size</item>
        <item name="android:letterSpacing">-0.06</item>
        <item name="android:textColor">?text_color</item>
        <item name="android:shadowColor">#66000000</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">4</item>
        <item name="android:shadowRadius">4</item>
        <item name="lineHeight">44sp</item>
        <item name="fontFamily">@font/manrope_semi_bold</item>
    </style>

    <style name="on_your_pho">
        <item name="android:textSize">@dimen/subtitle_text_size</item>
        <item name="android:letterSpacing">-0.02</item>
        <item name="android:textColor">?secondary_text_color</item>
        <item name="lineHeight">23sp</item>
        <item name="fontFamily">@font/manrope_regular</item>
    </style>

    <style name="scan">
        <item name="android:textSize">@dimen/scan_text_size</item>
        <item name="android:letterSpacing">-0.04</item>
        <item name="android:textColor">@color/white</item>
        <item name="lineHeight">33sp</item>
        <item name="fontFamily">@font/manrope_extra_bold</item>
    </style>

    <style name="scan_result">
        <item name="android:textSize">@dimen/scan_text_size</item>
        <item name="android:letterSpacing">-0.04</item>
        <item name="android:textColor">?text_color</item>
        <item name="lineHeight">33sp</item>
        <item name="fontFamily">@font/manrope_extra_bold</item>
    </style>

    <style name="card_title_app">
        <item name="android:textSize">@dimen/app_title_text_size</item>
        <item name="android:textColor">?text_color</item>
        <item name="lineHeight">23sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="fontFamily">@font/manrope_semi_bold</item>
    </style>

    <style name="details_title">
        <item name="android:textSize">@dimen/title_text_size</item>
        <item name="android:textColor">?text_color</item>
        <item name="lineHeight">44sp</item>
        <item name="fontFamily">@font/manrope_semi_bold</item>
    </style>

    <style name="back">
        <item name="android:textSize">@dimen/subtitle_text_size</item>
        <item name="android:letterSpacing">-0.06</item>
        <item name="android:textColor">?text_color</item>
        <item name="lineHeight">20sp</item>
        <item name="fontFamily">@font/gilroy_light</item>
    </style>

    <style name="property">
        <item name="android:textSize">@dimen/subtitle_text_size</item>
        <item name="android:letterSpacing">-0.02</item>
        <item name="android:textColor">?secondary_text_color</item>
        <item name="lineHeight">23sp</item>
        <item name="fontFamily">@font/manrope_regular</item>
    </style>

    <style name="value">
        <item name="android:textSize">@dimen/property_text_size</item>
        <item name="android:letterSpacing">-0.04</item>
        <item name="android:textColor">?text_color</item>
        <item name="lineHeight">27sp</item>
        <item name="android:textAlignment">viewEnd</item>
        <item name="fontFamily">@font/manrope_bold</item>
    </style>
</resources>